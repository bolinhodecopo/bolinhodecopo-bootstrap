.app-header
  height 350px
  margin 0 auto
  padding 50px 0 0 0

  .logo
    height 350px
    margin 0 auto
    position relative

    a
      display block

    img
      height 350px
      margin 0 auto
      display block

  @media (max-width: 970px)
    margin-bottom 20px

  @media (max-width: 400px)
    height auto

    .logo
      margin 0 20px

      img
        width 100%
        height auto
